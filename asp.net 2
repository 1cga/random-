#Create a webpage to demonstrate Session.
In session.aspx
<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="Login.aspx.cs"
Inherits="SessionDemo.Login" %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
 <title>Session Demo - Login</title>
</head>
<body style="text-align:center; font-family: Arial; margin-top:50px;">
 <form id="form1" runat="server">
 <asp:Label ID="Label1" runat="server" Text="User name"></asp:Label><br/>
 <asp:TextBox ID="TextBox1" runat="server"></asp:TextBox><br/><br/>
 <asp:Label ID="Label2" runat="server" Text="Password"></asp:Label><br/>
 <asp:TextBox ID="TextBox2" runat="server"
TextMode="Password"></asp:TextBox><br/><br/>
 <asp:Button ID="Button1" runat="server" Text="Click me" BackColor="Black"
ForeColor="White" OnClick="Button1_Click"/>
 <br/><br/>
 <asp:Label ID="Label3" runat="server" ForeColor="Red"></asp:Label>
 </form>
</body>
</html>

In session.aspx.cs
using System;
namespace SessionDemo
{
 public partial class Login : System.Web.UI.Page
 {
 protected void Page_Load(object sender, EventArgs e)
 {
 }
 protected void Button1_Click(object sender, EventArgs e)
 {
 if (!string.IsNullOrEmpty(TextBox1.Text) && TextBox2.Text.ToLower() ==
"razia123")
 {
 // Set session
 Session["Username"] = TextBox1.Text;
 Response.Redirect("Admin.aspx");
 }
 else
 {
 Label3.Text = "Invalid Username or Password!";
 }
 }
 }
}
# Create a webpage to demonstrate Cookies.

In cookies.aspx
<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="Cookies.aspx.cs"
Inherits="CookiesDemo.Cookies" %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
 <title>Cookies Demo</title>
</head>
<body style="text-align:center; font-family: Arial; margin-top:50px;">
 <form id="form1" runat="server">
 <asp:Label ID="Label1" runat="server" Text="Cookies" Font-Size="Larger"
ForeColor="Black"></asp:Label><br/><br/>

 <asp:Button ID="Button1" runat="server" Text="Show Cookies" Font-Size="Larger"
BackColor="Cyan" ForeColor="White" OnClick="Button1_Click"/><br/><br/>

 <asp:Label ID="Label2" runat="server" Font-Size="Larger"
ForeColor="Black"></asp:Label>
 </form>
</body>
</html>

In cookies.aspx.cs
using System;
using System.Web;
namespace CookiesDemo
{
 public partial class Cookies : System.Web.UI.Page
 {
protected void Page_Load(object sender, EventArgs e)
 {
 if (!IsPostBack)
 {
 // Create cookie
 HttpCookie cookie = new HttpCookie("User Info");
 cookie["name"] = "Surya Jaiswar";
 cookie["address"] = "Mumbai";
 cookie["country"] = "India";
 cookie.Expires = DateTime.Now.AddSeconds(30); // cookie expires in 30 seconds
 Response.Cookies.Add(cookie);
 Label2.Text = "Cookie has been created!";
 }
 }
 protected void Button1_Click(object sender, EventArgs e)
 {
 // Retrieve cookie
 HttpCookie cookie = Request.Cookies["User Info"];
 if (cookie != null)
 {
 string name = cookie["name"];
 string add = cookie["address"];
 string country = cookie["country"];
 Label2.Text = "<br>Cookie has been retrieved successfully!";
 Label2.Text += "<br>Your name: " + name;
 Label2.Text += "<br>I live in: " + add;
 Label2.Text += "<br>My country name is: " + country;
}
 else
 {
 Label2.Text = "Cookie has expired or does not exist!";
 }
 }
 }
}
#Create a webpage to demonstrate client machine State Management (Hidden Field).

In hidden.aspx
<%@ Page Language="C#" AutoEventWireup="true" CodeBehind="WebForm1.aspx.cs"
Inherits="HiddenFieldDemo.WebForm1" %>
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
 <title>Hidden Field Demo</title>
</head>
<body style="text-align:center; font-family: Arial; margin-top:50px;">
 <form id="form1" runat="server">
 <asp:Button ID="Button1" runat="server" Text="Click" OnClick="Button1_Click" />
 <asp:HiddenField ID="HiddenField1" runat="server" Value="0"/>
 <br /><br />
 <asp:Label ID="Label1" runat="server" ForeColor="Green"></asp:Label>
 </form>
</body>
</html>
In hidden.aspx.cs
using System;
namespace HiddenFieldDemo
{
 public partial class WebForm1 : System.Web.UI.Page
 {
 protected void Page_Load(object sender, EventArgs e)
 {
 }
protected void Button1_Click(object sender, EventArgs e)
 {
 // Read value from HiddenField
 int count = int.Parse(HiddenField1.Value);
 // Increment count
 count += 1;
 // Display count in Label
 Label1.Text = "Count: " + count;
 // Store updated count back in HiddenField
 HiddenField1.Value = count.ToString();
 }
 }
}
