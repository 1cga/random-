#print name, age, roll no of a student

using System;
public class HelloWorld
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter the name:");
        string name = Console.ReadLine();

        Console.WriteLine("Enter the roll number:");
        int.TryParse(Console.ReadLine(), out int roll);

        Console.WriteLine("Enter the age:");
        int.TryParse(Console.ReadLine(), out int age);

        Console.WriteLine($"Student name is {name}, Roll number is {roll}, and Age is {age}");
    }
}

# program to check grade of a student.

using System;
public class StudentGrade
{
 public static void Main(string[] args)
 {
 Console.WriteLine("Enter marks of the student:");
 int marks = int.Parse(Console.ReadLine());
 char grade;
 if (marks >= 90)
 grade = 'A';
 else if (marks >= 80)
 grade = 'B';
 else if (marks >= 70)
 grade = 'C';
 else if (marks >= 60)
 grade = 'D';
 else
 grade = 'F';
 Console.WriteLine($"Marks: {marks}, Grade: {grade}");
 }
}

#program to check week day using switch statement.
using System;
public class WeekDay
{
    public static void Main(string[] args)
    {
        Console.WriteLine("Enter day number (1 to 7):");
        int day = int.Parse(Console.ReadLine());
        string dayName;
        switch (day)
        {
            case 1:
                dayName = "Monday";
                break;
            case 2:
                dayName = "Tuesday";
                break;
            case 3:
                dayName = "Wednesday";
                break;
            case 4:
                dayName = "Thursday";
                break;
            case 5:
                dayName = "Friday";
                break;
            case 6:
                dayName = "Saturday";
                break;
            case 7:
                dayName = "Sunday";
                break;
            default:
                dayName = "Invalid day number!";
                break;
        }
        Console.WriteLine($"Day {day} is {dayName}");
    }
}

#.Write a program to reverse the string.

using System;
public class ReverseString{
 public static void Main(string[] args){
 Console.WriteLine("Enter a string:");
 string str = Console.ReadLine();
 string reversed = "";
 for (int i = str.Length - 1; i >= 0; i--){
 reversed += str[i];
 }
 Console.WriteLine($"Reversed string: {reversed}");
 }
}

# reverse number

using System;
public class ReverseNumber{
 public static void Main(string[] args)
 {
 Console.WriteLine("Enter a number:");
 int num = int.Parse(Console.ReadLine());
 int rev = 0;
 while (num > 0)
 {
 int digit = num % 10;
 rev = rev * 10 + digit;
 num = num / 10;
 }
 Console.WriteLine($"Reversed number: {rev}");
 }
}

#program to demonstrate all user-defined function type.

using System;
public class FunctionTypes{
 void Greet(){
 Console.WriteLine("Hello! Welcome to C# functions demo.");
 }
 void DisplaySquare(int n){
 Console.WriteLine($"Square of {n} is {n * n}");
 }
 int GetNumber(){
 Console.Write("Enter a number: ");
 int num = int.Parse(Console.ReadLine());
 return num;
 }
 int Add(int a, int b){
 return a + b;
 }
 public static void Main(string[] args){
 FunctionTypes obj = new FunctionTypes();
 obj.Greet();
 obj.DisplaySquare(5);
 int x = obj.GetNumber();
 Console.WriteLine($"You entered: {x}");
 int sum = obj.Add(10, 20);
 Console.WriteLine($"Sum of 10 and 20 is: {sum}");
 }
}

#a program for word number from input digits

using System;
class Word
{
 static void Main()
 {
 string[] words = { "zero", "one", "two", "three", "four", "five", "six", "seven", "eight",
"nine" };
 Console.WriteLine("Enter the number:");
 int.TryParse(Console.ReadLine(), out int n);
 Console.WriteLine(words[n]);
 }
}

#program to create a Namespace.

using Mynamespace;
using System;
namespace Mynamespace
{
 public class test2
 {
 public void display()
 {
 Console.WriteLine("Good Morning"!);
 }
 }
}
public class Test{
 public static void Main(){
 test2 t1 = new test2();
 t1.display();
 }
}
#WAP to handle format exception

using System;
class exception{
 public static void Main(){
 try{
 Console.WriteLine("Enter any number:");
 int num = int.Parse(Console.ReadLine());
 Console.WriteLine("You entered:" + num);
 }
 catch (FormatException exe)
 {
 Console.WriteLine(exe.Message);
 Console.WriteLine("You entered a character please entered any string!");
 }
 }
}

#WAP to handle divide by zero exception.

using System;
class exception{
public static void Main(){
 try{
 Console.WriteLine("Enter First Number:");
 int num1 = int.Parse(Console.ReadLine());
 Console.WriteLine("Enter Second Number:");
 int num2 = int.Parse(Console.ReadLine());
 int result = num1 / num2;
 }
 catch (DivideByZeroException exe){
 Console.WriteLine(exe.Message);
 }
 }
}
#WAP to handle array index out of bound exception

using System;
class exception{
 public static void Main(){
 try{
 int[] arr = { 1, 2, 3, 4, 5 };
 Console.WriteLine(arr[6]);
 }
 catch (IndexOutOfRangeException exe)
 {
 Console.WriteLine(exe.Message);
 }
 }
}
#WAP to demonstrate finally block and null exception

using System;
class exception{
 public static void Main(){
 try{
 string str = null;
 int str1 = str.Length;
 }
 catch (NullReferenceException exe){
 Console.WriteLine(exe.Message);
 }
 finally{
 Console.WriteLine("The Finally Block is Executed!!");
 }
 }
}


